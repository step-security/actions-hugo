{
  "name": "actions-hugo",
  "version": "3.0.0",
  "description": "GitHub Actions for Hugo",
  "main": "dist/index.js",
  "engines": {
    "node": ">=20.10.0",
    "npm": ">=10.2.3"
  },
  "scripts": {
    "all": "npm run format:check && npm run lint && npm test",
    "lint": "eslint ./{src,__tests__}/**/*.ts",
    "lint:fix": "eslint --fix ./{src,__tests__}/**/*.ts",
    "test": "jest --coverage --verbose",
    "build": "ncc build ./src/index.ts -o dist",
    "tsc": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "postinstall": "npx husky install"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.ts": [
      "prettier --check",
      "eslint"
    ],
    "README.md": [
      "npx doctoc@2.1.0 --github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/step-security/actions-hugo.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "TypeScript",
    "Hugo",
    "Setup"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/step-security/actions-hugo/issues"
  },
  "homepage": "https://github.com/step-security/actions-hugo#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.0",
    "@actions/tool-cache": "^1.7.2",
    "axios": "^1.7.4",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "~22",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.1.5",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nock": "^14.0.0",
    "prettier": "3.4.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  }
}
